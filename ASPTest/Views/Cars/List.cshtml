<h1>All Cars</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
@{ 
    foreach (var car in Model.allCars)
    {
    <div class="col-lg-4">
        <img class="img-thumbnail" src="@car.image" height="120" width="260" alt="@car.name">
        <h2>Модель: @car.name</h2>
        <p>Цена: @car.price.ToString("c")</p>
        <p>Описание: @car.fullDescription</p>
        <p><a class="btn btn-warning" href="/Cars/More_Tesla">Подробнее</a></p>
    </div>
        }
    }
</div>
